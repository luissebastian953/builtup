<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Client.ArchitectListDetailActivity"
    android:background="@color/blackGray"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/first_part_bh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/round_profile_a"
                    android:src="@drawable/ic_person_black_profiledp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_name_build_house_architect_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Architect Name"
                        android:textColor="@android:color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_organization_build_house_architect_c"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/darker_gray"
                        android:text="Organization"
                        android:textSize="15dp"
                        android:textStyle="italic" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/first_part_bh"
                android:id="@+id/second_part_bh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_view_architect_phone_bh_c"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintTop_toBottomOf="@id/first_part_bh"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:textColor="@android:color/holo_green_dark" />

                <LinearLayout
                    android:id="@+id/linear_layout_architect_phone_bh_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/border_data"
                    android:orientation="vertical"
                    android:padding="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/text_view_info_architect_phone_bh_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textColor="@android:color/white"
                        android:textStyle="normal" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/second_part_bh"
                android:id="@+id/third_part_bh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_view_address_architect_bh_c"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintTop_toBottomOf="@id/second_part_bh"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:textColor="@android:color/holo_green_dark" />

                <LinearLayout
                    android:id="@+id/linear_layout_architect_address_bh_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/border_data"
                    android:orientation="vertical"
                    android:padding="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/text_view_info_architect_address_bh_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Address"
                        android:textColor="@android:color/white"
                        android:textStyle="normal" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/third_part_bh"
                android:id="@+id/fourth_part_bh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_view_budget_architect_c"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintTop_toBottomOf="@id/second_part_bh"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Building Budget"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:textColor="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/edit_text_budget_c"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_input_1"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:hint="Rp. "
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/text_view_message_to_architect_bh_c"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="9dp"
                    app:layout_constraintTop_toBottomOf="@id/second_part_bh"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request Message"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:textColor="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/edit_text_message_to_bh_c"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/dark_input_area_1"
                    android:hint="Text Message request"
                    android:textColor="@android:color/white"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/button_submit_request_send_bh_c"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="150dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="Send Request"
                    android:background="@drawable/rounded_login"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>