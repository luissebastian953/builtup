<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/blackGray"
    tools:context=".Architect.InboxArchitect.ArchitectInboxDetail">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/first_part_bh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/round_profile_a"
                        android:src="@drawable/ic_person_black_profiledp" />

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:textAlignment="center"
                            android:id="@+id/text_view_name_architect_inbox_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Client Name"
                            android:textColor="@android:color/white"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/first_part_bh"
                    android:id="@+id/second_part_bh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_view_architect_construction_type_client_list_c"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@id/first_part_bh"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Construction Type"
                        android:textSize="15dp"
                        android:textStyle="italic"
                        android:textColor="@android:color/holo_green_dark" />

                    <LinearLayout
                        android:id="@+id/linear_layout_architect_inbox_construction_type_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_data"
                        android:orientation="vertical"
                        android:padding="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/text_view_info_architect_inbox_construction_type_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="type construction"
                            android:textColor="@android:color/white"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/second_part_bh"
                    android:id="@+id/third_part_bh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_view_budget_trans_architect_inbox_detail_a"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@id/second_part_bh"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budget"
                        android:textSize="15dp"
                        android:textStyle="italic"
                        android:textColor="@android:color/holo_green_dark" />

                    <LinearLayout
                        android:id="@+id/linear_layout_architect_budget_inbox_detail_a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_data"
                        android:orientation="vertical"
                        android:padding="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/text_view_info_architect_budget_inbox_detail_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. ----"
                            android:textColor="@android:color/white"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/third_part_bh"
                    android:id="@+id/fourth_part_bh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_view_request_message_inbox_a"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@id/second_part_bh"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Request Message"
                        android:textSize="15dp"
                        android:textStyle="italic"
                        android:textColor="@android:color/holo_green_dark" />

                    <LinearLayout
                        android:id="@+id/linear_layout_architect_status_trans_bh_a"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/border_data"
                        android:orientation="vertical"
                        android:padding="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/text_view_info_architect_inbox_request_message_inbox_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Message"
                            android:textColor="@android:color/white"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/fourth_part_bh"
                    android:id="@+id/fifth_part_bh"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/inbox_button_accepted_a"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_profile_a"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:text="Accept"/>

                    <Button
                        android:id="@+id/inbox_button_decline_a"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_cancel"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:text="Decline"/>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>