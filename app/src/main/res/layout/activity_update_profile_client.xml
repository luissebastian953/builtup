<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackGray"
    tools:context=".Client.UpdateProfileClientActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center">

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/first_step_profile_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/round_profile"
                    android:src="@drawable/ic_person_black_profiledp" />

                <TextView
                    android:id="@+id/text_view_fullname_profile_update_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_update_fullname_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fullname"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15dp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/edit_text_fullname_update_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_input_1"
                    android:textColor="@android:color/white"
                    android:hint="fullname"
                    android:padding="10dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_update_phone_number_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="contact number"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15dp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/edit_text_phone_number_update_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_input_1"
                    android:textColor="@android:color/white"
                    android:hint="contact number"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="20dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_update_address_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="address"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15dp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/edit_text_address_update_c"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/dark_input_area_1"
                    android:textColor="@android:color/white"
                    android:gravity="top"
                    android:hint="address"
                    android:padding="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:layout_margin="10dp"
                    android:id="@+id/btn_client_update_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/round_profile_a"
                    android:hint="Update"
                    android:textColorHint="@android:color/white" />
                <Button
                    android:layout_margin="10dp"
                    android:id="@+id/btn_client_update_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_cancel"
                    android:hint="Cancel"
                    android:textColorHint="@android:color/white" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>